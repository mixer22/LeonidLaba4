#include <iostream>
#include <math.h>
using namespace std;
int fact(int k)
{
	int out = 1, i = 1;
	while (i <= k)
	{
		out *= i;
		i++;
	}
	return out;
}

int main()
{
	double sum = 0;
	int  k = 1, tmp = 0, x = 0;
	cout << "input X: ";
	cin >> x;
	while (k < 21)
	{
		sum += (-fact(k)) / (x + 2 * k + k*k*k);
		k++;
	}
	cout << sum;
}
