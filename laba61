#include <iostream>
#include <math.h>
using namespace std;

int main(){
    int n;
    cout << "n = ";
    cin >> n;
    double *array = new double[n];
    for (int i = 0; i < n; i++)
    {
        cout << "a" << i << " = ";
        cin >> array[i];
        if (array[i] < 0)
        {
            array[i] = 0;
        }
    }
    for (int i = 0; i < n; i++)
    {
        cout << "a" << i << " = " << array[i] << " ";
    }
}
