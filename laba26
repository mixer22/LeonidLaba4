#include <iostream>
#include <math.h>
using namespace std;

int main(){
    double a;
    int count = 0;
    char ch;
    do
    {
        cout << "a" << count << " = ";
        cin >> a;
        if ((a == 0)||(a > 2))
        {
            a = 1;
        }
        cout << "a" << count << " = " << a << endl;
        count++;
        cout << "stop ? (Y/N)" << endl;
        cin >> ch;
    }
    while (ch != 'Y');
}
