#include <iostream>
#include <math.h>
using namespace std;

int main(){
    int indexMax = 0, indexMin = 0;
    const int n = 20;
    double array[n], max, min;
    for (int i = 0; i < n; i++)
    {
        cout << "a" << i << " = ";
        cin >> array[i];
        if (array[i] > max)
        {
            max = array[i];
            indexMax = i;
        }
        if (array[i] < min)
        {
            min = array[i];
            indexMin = i;
        }
    }
    array[indexMax] = min;
    array[indexMin] = max;
    for (int i = 0; i < n; i++)
    {
        cout << "a" << i << " = " << array[i] << " ";
    }
}
